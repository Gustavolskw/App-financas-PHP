{
    "version": "0.2.0",
    "configurations": [{
            "name": "Listen for XDebug on Docker",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "log": true,
            "stopOnEntry": false,
            "pathMappings": {
                "/var/www/html": "${workspaceRoot}"
            },
            "preLaunchTask": "enable:xdebug",
            "postDebugTask": "disable:xdebug"
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9003
        },
    ]
}